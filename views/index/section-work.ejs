<section id="work" class='section--container section-work'>
    <header class='section__header'>
    <h1 class='section__title'>Projects</h1>
    </header>
    <article class='section__content'>
        <div class='work-samples'>
            <% workHighlights.forEach(info => { %>
                <div class='work-sample'>
                    <div class='sample__gradient'></div>
                    <figure class='sample__figure'>
                        <img class='sample__img' src='<%= info.imgsource %>' alt='image-screenshot'>
                        <figcaption class='sample__body'>
                            <div class='work-sample__title'><%= info.title %></div>
                            <div class='work-sample__links'>
                                <% if(info.link!==undefined){ %>
                                    <div class='work-sample__link'>
                                        <a href='<%= info.link %>' target='_blank'>Demo</a>                                
                                    </div>
                                <% } %>
                                <div class='work-sample__link'>
                                    <a href='<%= info.githubLink %>'>Code</a>
                                </div>
                            </div>
                            <div class='work-sample__description'>
                                <p><%= info.description %></p>
                            </div>
                        </figcaption>
                    </figure>
                </div>
                <% }) %>
        </div>
    </article>
</section>